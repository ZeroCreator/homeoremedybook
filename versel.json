{
  "version": 2,
  "builds": [
    {
      "src": "wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "wsgi": {
          "app": "app.app"
        },
        "installCommand": "pip install -r requirements.txt",
        "startCommand": "gunicorn --bind :$$PORT wsgi:application",
        "rewrites": [{ "source": "/(.*)", "destination": "/" }]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}